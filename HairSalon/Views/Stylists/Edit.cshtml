@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit Stylist</h2>

<h4>Edit this stylist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StylistId)

    @Html.LabelFor(model => model.StylistName)
    @Html.EditorFor(model => model.StylistName)

    @*Html.LabelFor(model => model.StylistSpecialty)
    @Html.DropDownList("StylistSpecialtyId")*@

    @Html.LabelFor(model => model.Client)
    @Html.DropDownList("ClientId")

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to stylists", "Index")</p>

<p>@Html.ActionLink("Add new stylist", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>